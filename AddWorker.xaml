<Window
    x:Class="PhotostudioProject.AddWorker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhotostudioProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Додати працівника"
    Width="350"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="#B2FF99">
        <StackPanel
            x:Name="LoginStackPanel"
            Width="250"
            Height="430"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">


            <TextBlock
                Margin="0,0"
                HorizontalAlignment="Center"
                FontFamily="Comic Sans MS"
                FontSize="28"
                FontStyle="Italic"
                Text="Emerald Studio" />


            <TextBlock
                Height="36"
                Margin="0,0"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                RenderTransformOrigin="0.487,0.113"
                Text="Додати працівника" />

            <TextBlock
                Height="14"
                Margin="10,0,0,0"
                FontSize="12"
                FontWeight="SemiBold"
                RenderTransformOrigin="0.487,0.113"
                Text="Введіть ПІБ" />

            <Border
                Height="25"
                Margin="10"
                Padding="2"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="0"
                CornerRadius="5">
                <TextBox
                    x:Name="NameTextBoxAddWor"
                    Height="25"
                    Padding="2"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="14" />
            </Border>
            <TextBlock
                Height="14"
                Margin="10,0,0,0"
                FontSize="12"
                FontWeight="SemiBold"
                RenderTransformOrigin="0.487,0.113"
                Text="Введіть email" />

            <Border
                Height="25"
                Margin="10"
                Padding="0"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="0"
                CornerRadius="5">
                <TextBox
                    x:Name="EmailTextBoxAddWor"
                    Height="25"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="14" />
            </Border>
            <TextBlock
                Height="14"
                Margin="10,0,0,0"
                FontSize="12"
                FontWeight="SemiBold"
                RenderTransformOrigin="0.487,0.113"
                Text="Введіть номер телефону" />

            <Border
                Height="25"
                Margin="10"
                Padding="0"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="0"
                CornerRadius="5">
                <TextBox
                    x:Name="PhoneTextBoxAddWor"
                    Height="25"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="14" />
            </Border>
            <TextBlock
                Height="16"
                Margin="10,0,0,0"
                FontSize="12"
                FontWeight="SemiBold"
                RenderTransformOrigin="0.487,0.113"
                Text="Введіть пароль" />
            <Border
                Height="25"
                Margin="10"
                Padding="2"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="0"
                CornerRadius="5">
                <PasswordBox
                    x:Name="PasswordBoxLoginAddWor"
                    Height="25"
                    Margin="0,-2,0,8"
                    Padding="0"
                    BorderBrush="LightGray"
                    BorderThickness="0"
                    FontSize="14"
                    RenderTransformOrigin="0.499,-0.045" />
            </Border>
            <TextBlock
                x:Name="NullErrorTextAddWor"
                Height="16"
                HorizontalAlignment="Center"
                FontSize="12"
                FontWeight="SemiBold"
                Foreground="REd"
                RenderTransformOrigin="0.487,0.113"
                Text="Поля не можуть бути пусті"
                Visibility="Collapsed" />



            <Border
                Height="40"
                Margin="10"
                Padding="0"
                Background="#FF9999"
                BorderBrush="Gray"
                BorderThickness="0"
                CornerRadius="5"
                RenderTransformOrigin="0.513,0.147">
                <Button
                    x:Name="AddWorkerButton"
                    Height="40"
                    Background="#FF9999"
                    BorderBrush="Transparent"
                    Click="AddWorkerButton_Click"
                    Content="Продовжити"
                    Cursor="Hand"
                    FontSize="16"
                    Foreground="Black">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF9999" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                Storyboard.TargetName="border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#FF6666"
                                                                Duration="0:0:0.2" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                Storyboard.TargetName="border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#FF9999"
                                                                Duration="0:0:0.2" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>



            <TextBlock
                x:Name="ReturnToAdminPageAddWor"
                Cursor="Hand"
                FontSize="12"
                Foreground="Blue"
                MouseDown="ReturnToAdminPageAddWor_MouseDown"
                Text="Повернутись назад"
                TextAlignment="Center"
                TextDecorations="Underline" />
            <ContentControl x:Name="RegistrationP1ControlLogin" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>
