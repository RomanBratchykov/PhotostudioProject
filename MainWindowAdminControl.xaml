<UserControl
    x:Class="PhotostudioProject.MainWindowAdminControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhotostudioProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Border
            Padding="10"
            Background="#B2FF99"
            CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />

                    <RowDefinition />

                    <RowDefinition Height="40" />

                </Grid.RowDefinitions>


                <DockPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    LastChildFill="False">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontFamily="Comic Sans MS"
                        FontSize="20"
                        FontStyle="Italic"
                        Text="Emerald Studio" />

                    <Button
                        x:Name="WorkerAddButton"
                        Margin="20,0"
                        Padding="10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="Додати працівника"
                        Cursor="Hand"
                        DockPanel.Dock="Left"
                        Click="WorkerAddButton_Click"/>
                    <Button
                        x:Name="WorkerDeleteButton"
                        Margin="10,0"
                        Padding="10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="Видалити працівника"
                        Cursor="Hand"
                        Click="WorkerDeleteButton_Click"
                        DockPanel.Dock="Left" />
                    <Button
                        Margin="10,0"
                        Padding="10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="Переглянути просрочені закази"
                        Cursor="Hand"
                        DockPanel.Dock="Left" />

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        DockPanel.Dock="Right"
                        ToolTip="Профіль">
                        <Image
                            Width="30"
                            Height="30"
                            Source="Assets/profile_icon (2).png"
                            Stretch="Uniform" />

                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    x:Name="ViewProfileAdmin"
                                    Click="ViewProfileAdmin_Click"
                                    Header="Переглянути профіль" />
                                <MenuItem
                                    x:Name="CreateRaport"
                                    Click="CreateRaport_Click"
                                    Header="Зробити звіт" />
                                <Separator />
                                <MenuItem
                                    x:Name="ExitButtonAdmin"
                                    Click="ExitButtonAdmin_Click"
                                    Header="Вийти" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </DockPanel>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="10,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Ваші працівники" />

                    <DataGrid
                        Grid.Row="1"
                        Margin="10"
                        AutoGenerateColumns="False"
                        Background="#CCFFCC"
                        FontSize="14"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding NamePhotographer}"
                                Header="ПІБ" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Photographer}"
                                Header="Номер телефону" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Location}"
                                Header="Email" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>



            </Grid>
        </Border>
    </Grid>
</UserControl>
