<UserControl x:Class="PhotostudioProject.MainWindowControlClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotostudioProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Border Background="#B2FF99" CornerRadius="5" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition/>
                    <!-- Main content -->
                    <RowDefinition Height="40"/>
                    <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
                    <TextBlock FontFamily="Comic Sans MS" FontSize="20" FontStyle="Italic" Text="Emerald Studio"
                               VerticalAlignment="Center" Margin="10,0"/>

                    <Button Content="Створити замовлення" Margin="20,0" Padding="10,5"
                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                            DockPanel.Dock="Left" />
                    <Button Content="Перегляд фотографів" Margin="10,0" Padding="10,5"
                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                            DockPanel.Dock="Left" />

                    <Button Width="30" Height="30" HorizontalAlignment="Right" Margin="10,0"
                            DockPanel.Dock="Right" Background="Transparent" Cursor="Hand"
                            ToolTip="Профіль" BorderThickness="0">
                        <Image Source="Assets/profile_icon.png" Stretch="Uniform" />
                    </Button>
                </DockPanel>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Ваші замовлення" FontSize="16" FontWeight="Bold" Margin="10,0"/>

                    <DataGrid Grid.Row="1" Margin="10" AutoGenerateColumns="False" HeadersVisibility="Column"
                              Background="#CCFFCC" GridLinesVisibility="Horizontal" FontSize="14">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер" Binding="{Binding OrderNumber}" Width="*"/>
                            <DataGridTextColumn Header="Фотограф" Binding="{Binding Photographer}" Width="*"/>
                            <DataGridTextColumn Header="Локація" Binding="{Binding Location}" Width="*"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="*"/>
                            <DataGridTextColumn Header="Готовність" Binding="{Binding Status}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>


                <Grid Grid.Row="2">
                    <Button Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="Transparent" BorderThickness="0" ToolTip="Допомога">
                        <TextBlock Text="?" FontWeight="Bold" FontSize="16" />
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
