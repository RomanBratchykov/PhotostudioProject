<UserControl
    x:Class="PhotostudioProject.MainWindowControlClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhotostudioProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Border
            Padding="10"
            Background="#B2FF99"
            CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />

                    <RowDefinition />

                    <RowDefinition Height="40" />

                </Grid.RowDefinitions>


                <DockPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    LastChildFill="False">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontFamily="Comic Sans MS"
                        FontSize="20"
                        FontStyle="Italic"
                        Text="Emerald Studio" />

                    <Button
                        Margin="20,0"
                        Padding="10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="Створити замовлення"
                        Cursor="Hand"
                        DockPanel.Dock="Left" />
                    <Button
                        Margin="10,0"
                        Padding="10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="Перегляд фотографів"
                        Cursor="Hand"
                        DockPanel.Dock="Left" />

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        DockPanel.Dock="Right"
                        ToolTip="Профіль">
                        <Image
                            Width="30"
                            Height="30"
                            Source="Assets/profile_icon.png"
                            Stretch="Uniform" />

                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    x:Name="ViewProfileClient"
                                    Click="ViewProfileClient_Click"
                                    Header="Переглянути профіль" />
                                <MenuItem
                                    x:Name="DeleteProfileClient"
                                    Click="DeleteProfileClient_Click"
                                    Header="Видалити аккаунт" />
                                <Separator />
                                <MenuItem
                                    x:Name="ExitButtonClient"
                                    Click="ExitButtonClient_Click"
                                    Header="Вийти" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </DockPanel>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="10,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Ваші замовлення" />

                    <DataGrid
                        Grid.Row="1"
                        Margin="10"
                        AutoGenerateColumns="False"
                        Background="#CCFFCC"
                        FontSize="14"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding OrderNumber}"
                                Header="Номер" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Photographer}"
                                Header="Фотограф" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Location}"
                                Header="Локація" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Date}"
                                Header="Дата" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Status}"
                                Header="Готовність" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>


                <Grid Grid.Row="2">
                    <Button
                        x:Name="HelpButtonClient"
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="HelpButtonClient_Click"
                        ToolTip="Допомога">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="?" />

                        <Button.ContextMenu>
                            <ContextMenu>
                                <StackPanel Width="200" Margin="10">
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontSize="13"
                                        Text="Якщо потрібна допомога — зверніться до нашої підтримки."
                                        TextWrapping="Wrap" />

                                    <Border
                                        Height="40"
                                        Margin="10"
                                        Padding="0"
                                        Background="#FF9999"
                                        BorderBrush="Gray"
                                        BorderThickness="0"
                                        CornerRadius="5"
                                        RenderTransformOrigin="0.513,0.147">
                                        <Button
                                            x:Name="GetHelpButton"
                                            Height="40"
                                            Background="#FF9999"
                                            BorderBrush="Transparent"
                                            Click="GetHelpButton_Click"
                                            Content="Написати в підтримку"
                                            Cursor="Hand"
                                            FontSize="16"
                                            Foreground="Black">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#FF9999" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border
                                                                    x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderThickness="0"
                                                                    CornerRadius="5">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Trigger.EnterActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <ColorAnimation
                                                                                        Storyboard.TargetName="border"
                                                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                        To="#FF6666"
                                                                                        Duration="0:0:0.2" />
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </Trigger.EnterActions>
                                                                        <Trigger.ExitActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <ColorAnimation
                                                                                        Storyboard.TargetName="border"
                                                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                        To="#FF9999"
                                                                                        Duration="0:0:0.2" />
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </Trigger.ExitActions>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Border>

                                </StackPanel>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
