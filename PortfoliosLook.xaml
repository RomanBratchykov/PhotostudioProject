<UserControl
    x:Class="PhotostudioProject.PortfoliosLook"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhotostudioProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Border
            Padding="10"
            Background="#B2FF99"
            CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!--  Header  -->
                    <RowDefinition />
                    <!--  Main content  -->
                    <RowDefinition Height="40" />
                    <!--  Footer  -->
                </Grid.RowDefinitions>

                <!--  HEADER  -->
                <DockPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    LastChildFill="False">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontFamily="Comic Sans MS"
                        FontSize="20"
                        FontStyle="Italic"
                        Text="Emerald Studio" />
                    <TextBlock
                        x:Name="GetBackToClient"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        DockPanel.Dock="Right"
                        FontSize="16"
                        Foreground="Blue"
                        MouseDown="GetBackToClient_MouseDown"
                        Text="Повернутись назад"
                        TextDecorations="Underline" />
                </DockPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="709*" />
                        <ColumnDefinition Width="21*"/>
                        <ColumnDefinition Width="30*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.ColumnSpan="3"
                        Margin="10,0,10,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Портфоліо фотографів" />

                    <ScrollViewer
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        Margin="10,10,10,10"
                        VerticalScrollBarVisibility="Auto">

                        <ItemsControl x:Name="PhotoGallery">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button x:Name="ImageButton" Click="ImageButton_Click"
                    Padding="0"
                    BorderThickness="1"
                    BorderBrush="DarkGray"
                    Margin="5"
                    Tag="{Binding}">
                                        <Image Source="{Binding}" Width="150" Height="150" Stretch="UniformToFill"/>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>



            </Grid>
        </Border>
    </Grid>
</UserControl>
