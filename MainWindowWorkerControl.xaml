<UserControl
    x:Class="PhotostudioProject.MainWindowWorkerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhotostudioProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Border
            Padding="10"
            Background="#B2FF99"
            CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!--  Header  -->
                    <RowDefinition />
                    <!--  Main content  -->
                    <RowDefinition Height="40" />
                    <!--  Footer  -->
                </Grid.RowDefinitions>

                <!--  HEADER  -->
                <DockPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    LastChildFill="False">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontFamily="Comic Sans MS"
                        FontSize="20"
                        FontStyle="Italic"
                        Text="Emerald Studio" />

                    <Button
                        x:Name="PortfolioButton"
                        Margin="20,0"
                        Padding="10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="PortfolioButton_Click"
                        Content="Редагувати портфоліо"
                        Cursor="Hand"
                        DockPanel.Dock="Left">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    x:Name="ChangeMainPhoto"
                                    Click="ChangeMainPhoto_Click"
                                    Header="Вибрати основну фотографію" />
                                <MenuItem
                                    x:Name="ChoosePhotosPortfolio"
                                    Click="ChoosePhotosPortfolio_Click"
                                    Header="Вибрати портфоліо" />

                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <Button
                        x:Name="CompletedTasksButton"
                        Margin="10,0"
                        Padding="10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="CompletedTasksButton_Click"
                        Content="Виконані замовлення"
                        Cursor="Hand"
                        DockPanel.Dock="Left" />

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        DockPanel.Dock="Right"
                        ToolTip="Профіль">
                        <Image
                            Width="30"
                            Height="30"
                            Source="Assets/profile_icon (2).png"
                            Stretch="Uniform" />

                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    x:Name="ViewProfileWorker"
                                    Click="ViewProfileWorker_Click"
                                    Header="Переглянути профіль" />
                                <MenuItem
                                    x:Name="GetBackToLogin"
                                    Click="GetBackToLogin_Click"
                                    Header="Повернутись до логіну" />
                                <Separator />
                                <MenuItem
                                    x:Name="ExitButtonWorker"
                                    Click="ExitButtonWorker_Click"
                                    Header="Вийти" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </DockPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="73*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.ColumnSpan="2"
                        Margin="10,0,10,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Ваші замовлення" />

                    <DataGrid
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="10,10,10,10"
                        AutoGenerateColumns="False"
                        Background="#CCFFCC"
                        FontSize="14"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding OrderNumber}"
                                Header="Номер" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Location}"
                                Header="Локація" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Date}"
                                Header="Дата" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Status}"
                                Header="Готовність" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>



            </Grid>
        </Border>
        <TextBlock
            x:Name="CheckUpName"
            VerticalAlignment="Bottom"
            Text="" />
    </Grid>
</UserControl>
