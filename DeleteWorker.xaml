<Window
    x:Class="PhotostudioProject.DeleteWorker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhotostudioProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Видалити працівника"
    Width="350"
    Height="250"
    mc:Ignorable="d">
    <Grid Background="#B2FF99">
        <StackPanel
            x:Name="LoginStackPanel"
            Width="250"
            Height="250"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">


            <TextBlock
                Margin="0,10"
                HorizontalAlignment="Center"
                FontFamily="Comic Sans MS"
                FontSize="28"
                FontStyle="Italic"
                Text="Emerald Studio" />


            <TextBlock
                Height="36"
                Margin="0,10"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                RenderTransformOrigin="0.487,0.113"
                Text="Видалити працівника" />
            <ComboBox
                x:Name="DeleteWorkerComboBox"
                Width="200"
                Height="30"
                DisplayMemberPath="NameOfWorker"
                SelectedIndex="0"
                SelectedValuePath="IdPhotographer" />
            <TextBlock
                x:Name="NullErrorTextWorker"
                Height="16"
                HorizontalAlignment="Center"
                FontSize="12"
                FontWeight="SemiBold"
                Foreground="REd"
                RenderTransformOrigin="0.487,0.113"
                Text="Виберіть працівника"
                Visibility="Collapsed" />

            <Border
                Height="40"
                Margin="10"
                Padding="0"
                Background="#FF9999"
                BorderBrush="Gray"
                BorderThickness="0"
                CornerRadius="5"
                RenderTransformOrigin="0.513,0.147">
                <Button
                    x:Name="DeleteWorkerButton"
                    Height="40"
                    Background="#FF9999"
                    BorderBrush="Transparent"
                    Click="DeleteWorkerButton_Click"
                    Content="Видалити"
                    Cursor="Hand"
                    FontSize="16"
                    Foreground="Black">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF9999" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                Storyboard.TargetName="border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#FF6666"
                                                                Duration="0:0:0.2" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                Storyboard.TargetName="border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#FF9999"
                                                                Duration="0:0:0.2" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>


            <TextBlock
                x:Name="GetBackToAdminPageButton"
                Cursor="Hand"
                FontSize="12"
                Foreground="Blue"
                MouseDown="GetBackToAdminPageButton_MouseDown"
                Text="Повернутись назад"
                TextAlignment="Center"
                TextDecorations="Underline" />

        </StackPanel>
    </Grid>
</Window>
